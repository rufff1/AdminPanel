

@model RegisterVM
@{
    ViewData["Title"] = "Register";
    


    IEnumerable<State> states = ViewBag.State;
    SelectList selectListItems = new SelectList(states, nameof(State.Id), nameof(State.Name));

}



    <main>
        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                            <div class="d-flex justify-content-center py-4">
                                <a asp-controller="dashboard" asp-action="index" class="logo d-flex align-items-center w-auto">
                                    <img src="~/manage/assets/img/logo.png" alt="">
                                    <span class="d-none d-lg-block">NiceAdmin</span>
                                </a>
                            </div><!-- End Logo -->

                            <div class="card mb-3">

                                <div class="card-body">

                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                                        <p class="text-center small">Enter your personal details to create account</p>
                                    </div>

                                    <form method="post" enctype="multipart/form-data" class="row g-3 needs-validation" novalidate>
                                        <div asp-validation-summary="ModelOnly" class="text text-danger"></div>

                                        <div class="col-12">
                                            <label asp-for="Name" class="form-label">Your Name</label>
                                            <input asp-for="Name" class="form-control" required>
                                            <span asp-validation-for="Name" class="text text-danger"></span>

                                        </div>

                                        <div class="col-12">
                                            <label asp-for="Email" class="form-label">Your Email</label>
                                            <input asp-for="Email" class="form-control" required>
                                            <span asp-validation-for="Email" class="text text-danger"></span>

                                        </div>
                                        <div class="col-12">
                                            <label asp-for="Job" class="form-label">Your JOB</label>
                                            <input asp-for="Job" class="form-control" required>
                                            <span asp-validation-for="Job" class="text text-danger"></span>

                                        </div>
                                  
                                        <div class="col-12">
                                            <label asp-for="Adress" class="form-label">Your Adress</label>
                                            <input asp-for="Adress" class="form-control" required>
                                            <span asp-validation-for="Adress" class="text text-danger"></span>

                                        </div>
                                        <div class="col-12">
                                            @*<label asp-for="Phone" class="form-label">Your Phone</label>
        <input asp-for="Phone" class="form-control" required>
        <span asp-validation-for="Phone" class="text text-danger"></span>*@


                                            <select id="countryCode">
                                                <option value="+1">USA (+1)</option>
                                                <option value="+44">UK (+44)</option>
                                                <option value="+994">Az (+994)</option>
                                                <!-- Add other country codes as needed -->
                                            </select>
                                            <label asp-for="Phone" class="col-md-4 col-lg-3 col-form-label">Phone</label>
                                            <input type="text" id="phoneInput" asp-for="Phone" placeholder="Phone number">
                                            <span asp-validation-for="Phone" class="text text-danger"></span>


                                        </div>


                                        <div class="col-12">
                                            <label asp-for="UserName" for="yourUsername" class="form-label">Username</label>
                                            <div class="input-group has-validation">

                                                <input asp-for="UserName" class="form-control" required>
                                                <span asp-validation-for="UserName" class="text text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label asp-for="Salary" class="form-label">Salary</label>
                                            <input asp-for="Salary" class="form-control checking" required>
                                            <span asp-validation-for="Salary" class="text text-danger"></span>

                                        </div>
                                        <div class="col-12">

                                            <div class="form-group">
                                                <label asp-for="UserImageFile" class="control-label">Enter Image</label>
                                                <input asp-for="UserImageFile" class="form-control" />
                                                <span asp-validation-for="UserImageFile" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <label asp-for="Paswoord" class="form-label">Password</label>
                                            <input asp-for="Paswoord" class="form-control" required>

                                        </div>
                                        <div class="col-12">
                                            <label asp-for="ConfirmPaswoord" class="form-label">Confirm Paswoord</label>
                                            <input asp-for="ConfirmPaswoord" class="form-control" required>

                                        </div>

                                        <div class="col-12">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" required>
                                                <label class="form-check-label">I agree and accept the </label> <a>terms and conditions</a>
                                            </div>
                                        </div>


                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Create Account</button>
                                        </div>
                                        <div class="col-12">
                                            <p class="small mb-0">Already have an account? <a asp-area="manage" asp-controller="account" asp-action="login">Log in</a></p>
                                        </div>
                                    </form>

                                </div>
                            </div>



                        </div>
                    </div>
                </div>

            </section>

        </div>
    </main><!-- End #main -->

    <script>
        let checkX = document.querySelector(".checking");

        checkX.addEventListener("input", function (e) {
            if (e.target.value < 0) {
                e.target.value = 0
            }
        })
    </script>



